# Jamf Configuration
JAMF_URL=https://your-instance.jamfcloud.com
JAMF_CLIENT_ID=your_client_id
JAMF_CLIENT_SECRET=your_client_secret

# Health Check Thresholds
CHECK_IN_THRESHOLD_HOURS=24
RECON_THRESHOLD_HOURS=24
PENDING_COMMAND_THRESHOLD_HOURS=6

# Authentication
SECRET_KEY=your_secret_key_here_generate_a_strong_random_key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin User
# Note: ADMIN_PASSWORD should be a bcrypt hash in production
# Generate with: python -c "from passlib.context import CryptContext; print(CryptContext(schemes=['bcrypt']).hash('your_password'))"
ADMIN_USERNAME=admin
ADMIN_PASSWORD=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5GyYqVGRQAt1u

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Cache
CACHE_TTL_SECONDS=300

# Environment
ENVIRONMENT=development

# Database Configuration - SQLite (Development)
DATABASE_PATH=./jamf_monitor.db

# Database Configuration - MySQL (Production)
# Uncomment and configure when ENVIRONMENT=production
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=jamf_monitor
# MYSQL_PASSWORD=secure_password_here
# MYSQL_DATABASE=jamf_monitor
